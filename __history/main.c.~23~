void main()
{
set_tris_a(0xff);
set_tris_b(0x00);
set_tris_c(0x00);
set_tris_d(0x00);
output_b(0x00);
output_c(0x00);
output_d(0x00);



   while(TRUE)
   {
      m1BandiCalistir();
      while(input(pin_A0) == 0);//sensör kutuyu algýlayana kadar bekle
      delay_us(200);//algýlandý
      m1BandiDurdur();
      dirsekAsagi();
      
      
      
    
   }
